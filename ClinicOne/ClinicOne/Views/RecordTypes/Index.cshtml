
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div ng-app="app" ng-controller="cont">

    <div class="row">

        <div class="col-sm-12">
            <div class="form-group form-group-sm">
                <button style="box-shadow: 3px 3px 2px #888888" class="btn btn-primary" ng-click=""><span class="fa fa-plus"></span>Add Record Category</button>
                
            </div>
        </div>
    </div>


    <div class="col-sm-12">

        <div style="box-shadow: 5px 5px 2px #888888" class="panel-primary">
            <div class="panel-heading">Record Categories</div>


            <table st-table="recordTypeCategoriesDisplay" st-safe-src="recordTypeCategories" class="table table-condensed table-responsive table-striped table-bordered">


                <thead>
                    <tr>
                        
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="row in recordTypeCategoriesDisplay">
                        



                        <td>

                            <button class="btn-sm btn btn-info" ng-click=""><span class="fa fa-info-circle"></span> Details</button>

                        </td>


                        <td>

                            <button class="btn-sm btn btn-success" ng-click=""><span class="fa fa-edit"></span> Edit</button>

                        </td>

                        <td>

                            <button class="btn-sm btn btn-warning" ng-click=""><span class="fa fa-remove"></span> Delete</button>

                        </td>

                    </tr>
                </tbody>


                <tfoot>
                    <tr>

                        <td class="text-center" st-pagination="" st-items-by-page="8" colspan="7"></td>
                    </tr>
                </tfoot>
            </table>

        </div>

    </div>


</div>


@section Scripts {
    
    
    <script>

        angular.module('app', [], function () { })
        .controller('cont', function ($scope, $http) {


            $scope.recordTypeCategories = [];
            $scope.recordTypeCategoriesDisplay = [].concat($scope.recordTypeCategories);

            $http ({
                method: 'GET',
                url: '/RecordTypes/geRecordCategories'

            }).success (function (data) {
                
                $scope.recordTypeCategories = data;

            }, function errorCallBack (data) {

            });

        });

    </script>
    
    
    }