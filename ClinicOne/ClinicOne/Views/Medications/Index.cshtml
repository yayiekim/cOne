

<link href="~/.bin/bower_components/angular-ui-select/dist/select.min.css" rel="stylesheet" />
<link href="~/.bin/bower_components/selectize/dist/css/selectize.default.css" rel="stylesheet" />



<div ng-app="app" ng-controller="medicationCtrl">

    <div class="col-sm-12">

        <div style="box-shadow: 5px 5px 2px #888888" class="panel-primary">
            
            <div style="height:50px" class="panel-heading">
                Medications
                <button class="pull-right btn-sm btn btn-default" ng-click="showAddModal()"><span class="fa fa-plus"></span></button>
            </div>


            <table st-table="medicationsListDisplay" st-safe-src="medicationsList" class="table table-condensed table-responsive table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Medication Name</th>
                        <th>Medication Category Name</th>


                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="row in medicationsListDisplay">

                        <td><button class="btn btn-xs btn-default" ng-click="showEditModal(row)"><span class="fa fa-edit"></span></button></td>
                        <td>{{row.MedicationName}}</td>
                        <td>{{row.CategoryName}}</td>


                        <td>
                            <button class="btn-sm btn btn-info" ng-click="showDetailModal(row)"><span class="fa fa-info-circle"></span> Details</button>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>

                        <td class="text-center" st-pagination="" st-items-by-page="8" colspan="4"></td>
                    </tr>
                </tfoot>
            </table>

        </div>

    </div>






    <div class="modal fade" id="addModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalTitle">Modal title</h4>
                </div>
                <div class="modal-body">


                    <form class="form-horizontal" role="form">

                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Medication Name" ng-model="medication.MedicationName" ng-disabled="disableInput" class="form-control" id="medicationName" />
                            </div>
                        </div>


                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <ui-select ng-model="medication.CategoryId">
                                    <ui-select-match placeholder="Select Medication Category">{{$select.selected.CategoryName}}</ui-select-match>
                                    <ui-select-choices repeat="item.Id as item in medicationCategoryList | filter: $select.search">

                                        <span ng-bind="item.CategoryName"></span>
                                    </ui-select-choices>
                                </ui-select>


                            </div>
                        </div>


                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Medication Code" ng-model="medication.Code" ng-disabled="disableInput" class="form-control" id="medicationCode" />
                            </div>
                        </div>

                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Description" ng-model="medication.Description" ng-disabled="disableInput" class="form-control" id="medicationDescription" />
                            </div>
                        </div>

                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Amount" ng-model="medication.Amount" ng-disabled="disableInput" class="form-control" id="medicationAmount" />
                            </div>
                        </div>

                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Dosage" ng-model="medication.Dosage" ng-disabled="disableInput" class="form-control" id="medicationDosage" />
                            </div>
                        </div>

                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" ng-click="updateMedication()" data-dismiss="modal" class="btn btn-primary">Save Changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->






    <!-- DELETE MODAL -->
    <!-- DELETE MODAL -->
    <!-- DELETE MODAL -->

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><span class="fa fa-question-circle"></span> Confirm</h4>
                </div>
                <div class="modal-body">
                    <h5>Are you sure you want to remove <span><strong id=""></strong></span> </h5>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-sm btn btn-primary" data-dismiss="modal">No</button>
                    <button type="button" class="btn-sm btn btn-primary" ng-click="deleteMedication()" data-dismiss="modal">  Yes  </button>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


</div>


@section Scripts {
    
    <script src="~/.bin/bower_components/angular-smart-table/dist/smart-table.min.js"></script>
    <script src="~/Scripts/app/MedicationController.js"></script>

    <script src="~/.bin/bower_components/selectize/dist/js/selectize.min.js"></script>
    <script src="~/.bin/bower_components/angular-ui-select/dist/select.min.js"></script>

    <script>

        var app = angular.module('app', ['ui.select', 'smart-table', 'medicationController']);

    </script>

    }