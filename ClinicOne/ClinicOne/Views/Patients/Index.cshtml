
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-app="app" ng-controller="patientCtrl">

    <!-- DISPLAY PATIENT LIST -->
    <!-- DISPLAY PATIENT LIST -->
    <!-- DISPLAY PATIENT LIST -->


        <div class="col-sm-12">

            <div style="box-shadow: 5px 5px 2px #888888" class="panel-primary">
                
                <div style="height:50px" class="panel-heading">
                    Patients
                    <button class="pull-right btn-sm btn btn-default" ng-click="showAddModal()"><span class="fa fa-plus"></span></button>
                </div>
                
                <table st-table="patientsListDisplay" st-safe-src="patientsList" class="table table-condensed table-responsive table-striped table-bordered">


                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th>Birth Date</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="row in patientsListDisplay">
                            <td>{{row.FirstName + " " + row.MiddleName + " " + row.LastName}}</td>
                            <td>{{row.Gender}}</td>
                            <td>{{row.Age}}</td>
                            <td>{{row.BirthDate | date: 'MMM dd, yyyy'}}</td>

                            <td>

                                <button class="btn-sm btn btn-info" ng-click="showDetailModal(row)"><span class="fa fa-info-circle"></span> Details</button>

                            </td>


                            <td>

                                <button class="btn-sm btn btn-success" ng-click="showEditModal(row)"><span class="fa fa-edit"></span> Edit</button>

                            </td>

                            <td>

                                <button class="btn-sm btn btn-warning" ng-click="showConfirmDeleteModal(row)"><span class="fa fa-remove"></span> Delete</button>

                            </td>

                        </tr>
                    </tbody>


                    <tfoot>
                        <tr>

                            <td class="text-center" st-pagination="" st-items-by-page="8" colspan="7"></td>
                        </tr>
                    </tfoot>
                </table>

            </div>

        </div>



    <!-- ADD PATIENTS LIST -->
    <!-- ADD PATIENTS LIST -->
    <!-- ADD PATIENTS LIST -->


        
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalTitle">Modal title</h4>
                </div>
                <div class="modal-body">

                    <form class="form-horizontal" role="form">

                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="First Name" ng-model="Patient.FirstName" ng-disabled="disableInput" class="form-control" id="FirstName" />
                            </div>
                        </div>
                        

                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Middle Name" ng-model="Patient.MiddleName" ng-disabled="disableInput" class="form-control" id="MiddleName" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Last Name" ng-model="Patient.LastName" ng-disabled="disableInput" class="form-control" id="LastName" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Gender" ng-model="Patient.Gender" ng-disabled="disableInput" class="form-control" id="Gender" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Birth Date" ng-model="Patient.BirthDate" ng-disabled="disableInput" class="form-control" id="BirthDate" />
                            </div>
                        </div>
                        
                        <div class="form-group" ng-show="showAge">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Age" ng-model="Patient.Age" ng-disabled="disableInput" class="form-control" id="Age" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Blood Type" ng-model="Patient.BloodType" ng-disabled="disableInput" class="form-control" id="BloodType" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Contact #1" ng-model="Patient.ContactNumber1" ng-disabled="disableInput" class="form-control" id="ContactNumber1" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Contact #2" ng-model="Patient.ContactNumber2" ng-disabled="disableInput" class="form-control" id="ContactNumber2" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Address #1" ng-model="Patient.Address1" ng-disabled="disableInput" class="form-control" id="Address1" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            
                            <div class="col-sm-10">
                                <input type="text" placeholder="Address #2" ng-model="Patient.Address2" ng-disabled="disableInput" class="form-control" id="Address2" />
                            </div>
                        </div>           
                     
                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" ng-click="updatePatient()" data-dismiss="modal" class="btn btn-primary">Save Changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->







    <!-- DELETE MODAL -->
    <!-- DELETE MODAL -->
    <!-- DELETE MODAL -->


    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><span class="fa fa-question-circle"></span> Confirm</h4>
                </div>
                <div class="modal-body">
                    <h5>Are you sure you want to remove <span><strong id="deletePatientFullName"></strong></span> from patient list?</h5>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-sm btn btn-primary" data-dismiss="modal">No</button>
                    <button type="button" class="btn-sm btn btn-primary" ng-click="deletePatient()" data-dismiss="modal">  Yes  </button>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->



    </div>






