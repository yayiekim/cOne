@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div id="wrapper" class="small">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Clinic One", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li><div hidden="hidden" id="loader">  Please wait system is loading <img src="~/Images/294.GIF" /></div></li>

                @if (User.Identity.IsAuthenticated == true)
            {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-envelope fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-messages"></ul>
                        <!-- /.dropdown-messages -->
                    </li>

                <!-- /.dropdown -->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-bell fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-alerts"></ul>
                        <!-- /.dropdown-alerts -->
                    </li>

                }

                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Manage", new { title = "Manage" })"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->


            </ul>
            <!-- /.navbar-top-links -->
            @if (User.Identity.IsAuthenticated == true)
            {
                <div  class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                           
                            <li>

                                <a href="@Url.Action("Index", "Waiting")"><i class="fa fa-clock-o"></i> Waiting List</a>
                            </li>

                            <li>

                                <a href="@Url.Action("Index", "WaitingTables")"><i class="fa fa-medkit"></i> Checked-in</a>
                            </li>

                            <li>

                                <a href="@Url.Action("Index", "PatientsTables")"><i class="fa fa-users"></i> Patients</a>
                            </li>
                            <li>

                                <a href="@Url.Action("Index", "PatientConditionTables")"><i class="fa fa-stethoscope fa-fw"></i> Consutations</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-file-text-o fa-fw"></i> Reports<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>@Html.ActionLink("Scope of Deliveries", "Index", "Scope")</li>
                                    <li>@Html.ActionLink("Branch Listing", "Index", "BranchList")</li>
                                    <li>@Html.ActionLink("User Management", "UserManager", "SystemAdministration")</li>
                                    <li>@Html.ActionLink("User in Roles", "Index", "SystemAdministration")</li>
                                    <li>@Html.ActionLink("Roles", "Index", "SystemAdministration")</li>
                                    <li>@Html.ActionLink("Manuals", "Index", "TutorialAdmin")</li>

                                </ul>
                                <!-- /.nav-second-level -->
                            </li>
                            <li>

                                <a href="@Url.Action("Index", "Branches")"><i class="fa fa-user"></i> Nurses</a>
                            </li>

                            <li>

                                <a href="@Url.Action("Index", "Branches")"><i class="fa fa-user-md"></i> Doctors</a>
                            </li>


                        </ul>
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>
            }
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper" style="padding-top:12px">
            <div class="row">

                <div class="col-lg-12">

                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Clinic One Application</p>
                    </footer>



                </div>


            </div>

        </div>

    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @RenderSection("scripts", required: false)



</body>
</html>
